<p id="notice"><%= notice %></p>

<h1>Listing Knowledge Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @knowledge_groups.each do |knowledge_group| %>
      <tr>
        <td><%= knowledge_group.name %></td>
        <td><%= link_to 'Show', knowledge_group %></td>
        <td><%= link_to 'Edit', edit_knowledge_group_path(knowledge_group) %></td>
        <td><%= link_to 'Destroy', knowledge_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

