<p id="notice"><%= notice %></p>

<h1>Listing Teachers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Registry</th>
      <th>Lattes url</th>
      <th>Entry date</th>
      <th>Formation</th>
      <th>Workload</th>
      <th>About</th>
      <th>Rg</th>
      <th>Cpf</th>
      <th>Birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.registry %></td>
        <td><%= teacher.lattes_url %></td>
        <td><%= teacher.entry_date %></td>
        <td><%= teacher.formation %></td>
        <td><%= teacher.workload %></td>
        <td><%= teacher.about %></td>
        <td><%= teacher.rg %></td>
        <td><%= teacher.cpf %></td>
        <td><%= teacher.birth %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

